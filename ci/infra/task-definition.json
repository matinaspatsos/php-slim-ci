{
    "containerDefinitions": [
        {
            "name": "php-slim-container",
            "image": "${image}",
            "cpu": 0,
            "memoryReservation": 512,
            "portMappings": [
                {
                    "name": "${app-name}-container-80-tcp",
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "essential": true,
            "environment": [],
            "environmentFiles": [],
            "mountPoints": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/${app-name}-task-definition",
                    "awslogs-region": "${aws-region}",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "family": "${app-name}-task-definition",
    "executionRoleArn": "${task-execution-role}",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "2048",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    }
}
